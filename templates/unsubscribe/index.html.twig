{% extends 'baseconnexion.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}


    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Unsubscribe</h3></div>
                        <div class="card-body">

                            {% for flash_error in app.flashes('message') %}
                                <div class="alert alert-warning text-dark"
                                     role="alert">{{ flash_error }}</div>
                            {% endfor %}


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>











{% endblock %}
