{% extends 'baseadmin.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    <h1>Cv</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Est active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.title }}</td>
                <td>{{ cv.IsActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('app_cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Rien trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_cv_new') }}">Créer un cv</a>
{% endblock %}
