{% extends 'baseadmin.html.twig' %}


{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ message.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ message.content|raw }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<div class="form-group pt-1">
    <a href="{{ path('app_message_index') }}" class="btn btn-dark">Retour</a>

    <a href="{{ path('app_message_edit', {'id': message.id}) }}"  class="btn btn-primary">Editer</a>
</div>
    {{ include('admin/message/_delete_form.html.twig') }}
{% endblock %}
