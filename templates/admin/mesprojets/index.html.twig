{% extends 'baseadmin.html.twig' %}

{% block title %}Mesprojets index{% endblock %}

{% block body %}
    <h1>Mes projets </h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mesprojet in mesprojets %}
            <tr>
                <td>{{ mesprojet.id }}</td>
                <td>{{ mesprojet.title }}</td>
                <td>{{ mesprojet.date ? mesprojet.date|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('app_mesprojets_show', {'id': mesprojet.id}) }}">Voir</a>
                    <a href="{{ path('app_mesprojets_edit', {'id': mesprojet.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Rien trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_mesprojets_new') }}">Ajouter un nouveau projet</a>
{% endblock %}
