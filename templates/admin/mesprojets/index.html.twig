{% extends '../../base.html.twig' %}

{% block title %}Mesprojets index{% endblock %}

{% block body %}
    <h1>Mesprojets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Lien_github</th>
                <th>Lien_web</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mesprojet in mesprojets %}
            <tr>
                <td>{{ mesprojet.id }}</td>
                <td>{{ mesprojet.title }}</td>
                <td>{{ mesprojet.content }}</td>
                <td>{{ mesprojet.date ? mesprojet.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mesprojet.lienGithub }}</td>
                <td>{{ mesprojet.lienWeb }}</td>
                <td>
                    <a href="{{ path('app_mesprojets_show', {'id': mesprojet.id}) }}">show</a>
                    <a href="{{ path('app_mesprojets_edit', {'id': mesprojet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mesprojets_new') }}">Create new</a>
{% endblock %}
