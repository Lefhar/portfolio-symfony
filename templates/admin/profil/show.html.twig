{% extends 'baseadmin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles|first?'ADMIN':'USER' }}</td>
            </tr>

            <tr>
                <th>Vérifié</th>
                <td>{{ user.isVerified ? 'Yes' : ("<a href=\""~path('app_resendemail')~"\" target=\"_blank\">resend email</a>")|raw }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img class="rounded" width="150" src="{{ user.photo?"/assets/file/"~ user.photo :asset('assets/file/blank-profile-picture-973460__340.webp') }}" alt=""></td>
            </tr>
        </tbody>
    </table>
<div class="form-group">
    <a href="{{ path('app_profil_index') }}" class="btn btn-dark">Retour</a>

    <a href="{{ path('app_profil_edit', {'id': user.id}) }}" class="btn btn-success">Editer</a>
</div>
{% endblock %}
